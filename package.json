{
  "name": "tester-go",
  "description": "A tester package for the Go language that uses `go test` to display test coverage.",
  "keywords": [
    "go",
    "golang",
    "test",
    "tester",
    "coverage"
  ],
  "main": "./lib/main",
  "version": "0.1.0",
  "repository": "https://github.com/joefitzgerald/tester-go",
  "license": "Apache-2.0",
  "engines": {
    "atom": ">=1.5.4 <2.0.0"
  },
  "author": "Joe Fitzgerald <jfitzgerald@pivotal.io> (http://github.com/joefitzgerald)",
  "homepage": "https://atom.io/packages/tester-go",
  "bugs": {
    "url": "https://github.com/joefitzgerald/tester-go/issues"
  },
  "dependencies": {
    "atom-package-deps": "^4.0.1",
    "lodash": "^4.6.1",
    "temp": "^0.8.3"
  },
  "devDependencies": {
    "eslint": "^2.4.0",
    "babel-eslint": "^6.0.0-beta.6",
    "eslint-config-standard": "^5.1.0",
    "eslint-plugin-standard": "^1.3.2",
    "eslint-plugin-promise": "^1.1.0",
    "fs-plus": "^2.8.1"
  },
  "package-deps": [
    "go-config",
    "go-get",
    "linter"
  ],
  "consumedServices": {
    "go-config": {
      "versions": {
        "1.0.0": "consumeGoconfig"
      }
    },
    "go-get": {
      "versions": {
        "1.0.0": "consumeGoget"
      }
    }
  },
  "configSchema": {
    "runCoverageOnSave": {
      "title": "Run Coverage Tool On Save",
      "description": "Run `go test -coverprofile` each time a file is saved",
      "type": "boolean",
      "default": false,
      "order": 1
    }
  },
  "standard": {
    "globals": [
      "atom",
      "waitsForPromise"
    ]
  }
}
